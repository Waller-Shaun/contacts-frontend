/* pages/contactList/contactList.wxss */
/*用于美化页面布局*/

/*设置页边距*/
.container{
  padding: 20px;
}

/* 添加联系人按钮样式 */
.add-button {
  width: 100%;
  padding: 12px;
  margin-bottom: 20px;
  background-color: #FF9800;
  color: white;
  border: none;
  text-align: center;
  border-radius: 8px;
  font-size: 16px;
}

/* 单个联系人条目的样式 */
.contact-item {
  display: flex;

  align-items: center;
  background-color: #fff;
  padding: 12px;
  margin-bottom: 10px;
  border-radius: 8px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  height: 60px; /* 确保每个联系人框高度一致 */
  width: 300px;
  box-sizing: border-box;
  
}

/* 联系人信息部分，使用 flex 布局 */
.contact-info {
  flex:1;
  flex-direction: row;
  display: flex;
}

/* 联系人姓名样式 */
.contact-name {
  flex:1;
  font-weight: bold;
  margin-right: 10px;
}

/* 联系人电话样式 */
.contact-phone {
  font-size: 11px;
  color: #666;
  margin-right: 30px;
  margin-top: 5px;
}

/* 删除按钮样式 */
.delete-button {
  padding-left: 5%;
  padding-top: 3%;
  min-width: 50px;  /* 固定宽度 */
  height: 40px;  /* 固定高度 */
  background-color: #F44336;
  color: white;
  border: none;
  border-radius: 4px;
  font-size: 14px;
  word-break: keep-all;
  text-align: start;
  cursor: pointer;
  flex-shrink: 0;
}
.modify-button {
  padding-left: 5%;
  padding-top: 3%;
  min-width: 50px;  /* 固定宽度 */
  height: 40px;  /* 固定高度 */
  background-color: #DDDDDD;
  color: black;
  border: none;
  border-radius: 4px;
  font-size: 14px;
  word-break: keep-all;
  text-align: center;
  cursor: pointer;
  flex-shrink: 0;
}

/*名字加粗显示*/
.contact-item text:first-child{
  font-weight: bold;
  font-size: 16px
}

.modal-background{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5); /* 半透明背景 */
  display: flex;
  justify-content: center;
  align-items: center;
}
.modal-content {
  width: 80%;
  background-color: #fff;
  padding: 20px;
  border-radius: 10px;
}

.modal-header {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 10px;
}

.modal-body input {
  width: 90%;
  margin-bottom: 10px;
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 5px;
}

.modal-footer {
  display: flex;
  justify-content: space-between;
}